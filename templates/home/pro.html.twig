{% extends "base.html.twig" %}
{% block title %} Pro {% endblock %}
{% block body %}
    <div class="d-flex flex-column align-items-center">
        <h1>Voici mon exp√©rience.</h1>
        <img src="/assets/images/cv.jpg" alt="cv">
        <div class="row">
            {% for experience in experiences %}
                <div class="card col-md-4" style="width:18rem">
                    <div class="card-body">
                        <h5 class="card-title">{{ experience.name }}</h5>
                        <p class="card-text" style="max-height: 250px;
                                                height: 250px;
                                                white-space: nowrap;
                                                overflow: hidden;
                                                text-overflow: ellipsis;">
                            {{ experience.description }}
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}